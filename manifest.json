{
    "manifest_version": 3,
    "name": "Design Mode Toggle",
    "version": "1.0",
    "author": "wibu1892001@gmail.com",
    "description": "Just a simple Chrome extension to toggle designMode on and off (Chrome supports only)",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}